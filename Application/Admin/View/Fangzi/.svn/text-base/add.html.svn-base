<title>房子添加</title>


<!-- 引入城市选择器的js样式 -->
<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.js"></script>
		<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.cityselect.js"></script>
		<script type="text/javascript">
			$(function(){
				$("#city").citySelect({
					nodata:"none",
					required:true
				}); 
			});
		</script>




</head>
<body>
<div class="pd-20">
	<form action="{:U('Admin/Fangzi/insert')}" method="post" class="form form-horizontal" id="form-article-add" enctype="multipart/form-data">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>产品标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="" id="biaoti" name="title" style="width:500px">
				<span id="fang_biaoti" style="color:red"></span>
			</div>
			<script type="text/javascript">
				// 当输入标题，丧失焦点的时候，
				var aa;
				$('#biaoti').blur(function(){
					// 获取标题中填写的值
					var b=$('#biaoti').val();
					if(b){
						$('#fang_biaoti').html('');
						aa=1;
					}else{
						$('#fang_biaoti').html('请输入产品标题');
						aa=0;
					}
				})
			</script>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>房屋朝向：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="caoxiang" class="select">
					<option value="南北">南北</option>
					<option value="东西">东西</option>
					<option value="东南">东南</option>
					<option value="东北">东北</option>
					<option value="西北">西北</option>
					<option value="西南">西南</option>
				</select>
				</span> 
			</div>
			
			<label class="form-label col-2"><span class="c-red">*</span>出租方式：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="fangshi" class="select">
					<option value="整套出租">整套出租</option>
					<option value="单间出租">单间出租</option>
					<option value="床位出租">床位出租</option>
					<option value="二手房">二手房</option>

				</select>
				</span> 
			</div>

			</div>
		<div class="row cl">
			<label class="form-label col-2">大小：</label>
			<div class="formControls col-10">
				<input type="text" name="size" id="" placeholder="输入房子的大小" value="" class="input-text" style=" width:25%">
				平方米&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<input type="text" name="shi" id="" placeholder="输入几室" value="" class="input-text" style=" width:25%">
				室
				<input type="text" name="ting" id="" placeholder="输入几厅" value="" class="input-text" style=" width:25%">
				厅</div>
		</div>

		<div class="row cl">
		
			<label class="form-label col-2">价格：</label>
			<div class="formControls col-4" style="width:200px">
				<input id="jiage" type="text" name="zujin" placeholder="" value="" class="input-text" style="width:90%">
				元
				<span id="fang_jiage" style="color:red"></span>
			</div>
		</div>
		<script type="text/javascript">
			// 当输入房租，丧失焦点的时候
			var bb;
			$('#jiage').blur(function(){
				var a=$('#jiage').val();
				if(a){
					$('#fang_jiage').html('');
					a=1;
				}else{
					$('#fang_jiage').html('请输入价格');
					a=0;
				}
			})
		</script>
		<div class="row cl" id="city">
			<label class="form-label col-2">您的城市：</label>
			<select class="prov" name="prov"></select>  
			<select class="city" disabled="disabled" name="city"></select> 
			<select class="dist" disabled="disabled" name="dist"></select> 
		</div>
		<div class="row cl" id="picdiv">
			<label class="form-label col-2"><span class="c-red">*</span>上传图片：</label>
			<input type="file" name="pic[]">
			<input type="button" id="add" value="继续添加">
		</div>
		<literal>
		<script type="text/javascript">
		$('#add').click(function(){
			var input = $('input[type="file"][name="pic[]"]').eq(0).clone(true);
			input.insertBefore('#add');

		})
		</script>
		</liretal>
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-10"> 
				
				<textarea name="miaoshu" cols="" rows="" class="textarea"  placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onKeyUp="textarealength(this,200)"></textarea>
			</div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button onClick="article_save_submit();" id="fang_baocun" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存并提交审核</button>
			</div>
		</div>
	</form>

	<script type="text/javascript">
		$('#fang_baocun').click(function(){
			$('#biaoti').blur();
			$('#jiage').blur();
			if(aa!=1 || bb!=1){
				return false;
			}

		})
	</script>
</div>
</div>
<script type="text/javascript" src="__PUBLIC__/Admin/ueditor/1.4.3/ueditor.config.js"></script>
<script type="text/javascript" src="__PUBLIC__/Admin/ueditor/1.4.3/ueditor.all.min.js"> </script>
<script type="text/javascript" src="__PUBLIC__/Admin/ueditor/1.4.3/lang/zh-cn/zh-cn.js"></script>

</body>
</html>