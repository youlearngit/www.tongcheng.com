<title>房子修改</title>


<!-- 引入城市选择器的js样式 -->
<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.js"></script>
		<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.cityselect.js"></script>
		<script type="text/javascript">
			$(function(){
				$("#city").citySelect({
					nodata:"none",
					required:true
				}); 
			});
		</script>




</head>
<body>
<div class="pd-20">
	<form action="{:U('Admin/Fangzi/update')}" method="post" class="form form-horizontal" id="form-article-add" enctype="multipart/form-data">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>产品标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="{$info['title']}" placeholder="" id="" name="title">
			</div>
		</div>
		<!-- <div class="row cl">
			<label class="form-label col-2">简略标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="" id="" name="">
			</div>
		</div> -->
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>房屋朝向：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="caoxiang" class="select">
					<option value="0"  <if condition="$info['caoxiang'] eq 0" >selected</if>>南北</option>
					<option value="1"  <if condition="$info['caoxiang'] eq 1" >selected</if>>东西</option>
					<option value="2"  <if condition="$info['caoxiang'] eq 2" >selected</if>>东南</option>
					<option value="3"  <if condition="$info['caoxiang'] eq 3" >selected</if>>东北</option>
					<option value="4"  <if condition="$info['caoxiang'] eq 4" >selected</if>>西北</option>
					<option value="5"  <if condition="$info['caoxiang'] eq 5" >selected</if>>西南</option>
				</select>
				</span> 
			</div>
			
			<label class="form-label col-2"><span class="c-red">*</span>出租方式：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="fangshi" class="select">
					<option value="0"  <if condition="$info['fangshi'] eq 0" >selected</if>>整套出租</option>
					<option value="1"  <if condition="$info['fangshi'] eq 1" >selected</if>>单间出租</option>
					<option value="2"  <if condition="$info['fangshi'] eq 2" >selected</if>>床位出租</option>
				
				</select>
				</span> 
			</div>


			<!-- <label class="form-label col-2">排序值：</label> -->
			<!-- <div class="formControls col-2"> -->
				<!-- <input type="text" class="input-text" value="0" placeholder="" id="" name=""> -->
			</div>
			<!-- <label class="form-label col-2">允许评论：</label> -->
			<!-- <div class="formControls col-2 skin-minimal">
				<div class="check-box">
					<input type="checkbox" id="checkbox-1">
					<label for="checkbox-1">&nbsp;</label>
				</div>
			</div> -->
		<!-- </div> -->
		<div class="row cl">
			<label class="form-label col-2">厅室：</label>
			<div class="formControls col-10">
				<input type="text" name="long" id="" placeholder="输入房子的大小" value="{$info['size']}" class="input-text" style=" width:25%">
				平方米
				<input type="text" name="width" id="" placeholder="输入几室" value="{$info['shi']}" class="input-text" style=" width:25%">
				室
				<input type="text" name="height" id="" placeholder="输入几厅" value="{$info['ting']}" class="input-text" style=" width:25%">
				厅</div>
		</div>

		<div class="row cl">
		
			<label class="form-label col-2">出租价格：</label>
			<div class="formControls col-4">
				<input type="hidden" name='id' value="{$info['id']}">
				<input type="text" name="zujin" id="" placeholder="" value="{$info['zujin']}" class="input-text" style="width:90%">
				元</div>
		</div>
		
		<!-- <div class="row cl">
			<label class="form-label col-2">产品关键字：</label>
			<div class="formControls col-10">
				<input type="text" name="" id="" placeholder="多个关键字用英文逗号隔开，限10个关键字" value="" class="input-text">
			</div>
		</div> -->
		<div class="row cl" id="city">
			<label class="form-label col-2">您的城市：</label>
			<select class="prov" name="prov"></select>  
			<select class="city" disabled="disabled" name="city"></select> 
			<select class="dist" disabled="disabled" name="dist"></select> 
		</div>
		<div class="row cl" id="picdiv">
			<label class="form-label col-2">上传图片：</label>
			<input type="file" name="pic[]">
			<input type="button" id="add" value="继续添加">
		</div>
		<div class="row cl" id="picdiv">
			<label class="form-label col-2">修改图片：</label>
			<div class="formControls col-4">
			<div style="height:200px;weight:500px;border:1px solid red">
			<foreach name="info['pic']" item="vo">
				<img src="__PUBLIC__{$vo}" alt="" width="100px">
			</foreach>
			</div>
			
			</div>
		</div>
		<literal>
		<script type="text/javascript">
		$('#add').click(function(){
			var input = $('input[type="file"][name="pic[]"]').eq(0).clone(true);
			input.prependTo('#picdiv');

		})
		</script>
		</liretal> 
		<div class="row cl">
			<label class="form-label col-2">产品摘要：</label>
			<div class="formControls col-10">
				<textarea name="miaoshu" cols="" rows="" class="textarea"  placeholder= datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onKeyUp="textarealength(this,200)">{$info['miaoshu']}</textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button onClick="article_save_submit();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存并提交审核</button>
			</div>
		</div>
	</form>
</div>
</div>


</body>
</html>