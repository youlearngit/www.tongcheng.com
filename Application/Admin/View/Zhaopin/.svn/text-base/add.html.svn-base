<title>职位添加</title>


<!-- 引入城市选择器的js样式 -->
<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.js"></script>
		<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.cityselect.js"></script>
		<script type="text/javascript">
			$(function(){
				$("#city").citySelect({
					nodata:"none",
					required:true
				}); 
			});
		</script>




</head>
<body>
<div class="pd-20">
	<form action="{:U('Admin/Zhaopin/insert')}" method="post" class="form form-horizontal" id="form-article-add" enctype="multipart/form-data">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>职务标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="" id="" name="title">
			</div>
		</div>
		<!-- <div class="row cl">
			<label class="form-label col-2">简略标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="" id="" name="">
			</div>
		</div> -->
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>福利待遇：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="daiyu" class="select">
					<option value="五险一金">五险一金</option>
					<option value="不是五险一金">不是五险一金</option>
				</select>
				</span> 
			</div>
		</div>

		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>休假：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="xiujia" class="select">
					<option value="双休">双休</option>
					<option value="单休">单休</option>
				</select>
				</span> 
			</div>
		</div>
		
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>是否接受残疾：</label>
			<div class="formControls col-2">
				<input type="radio" name="canji" value="是">是
				<input type="radio" name="canji" value="否">否
			</div>
		</div>


		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>职务类型：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="zhonglei" id="zhonglei" class="select">
					<option value="">请选择</option>
				</select>
				</span> 
			</div>
			
			<!-- <label class="form-label col-2"><span class="c-red">*</span>宠物品种：</label> -->
			<div class="formControls col-2"> <span class="select-box">
				<select name="fenlei" id="fenlei" class="select">
				</select>
				</span> 
			</div>
			<script type="text/javascript">
	//信息声明
	var p = ['销售','客服'];
	var c = [];
	c[0] = ['销售代表','销售助理','销售总监'];
	c[1] = ['客服经理','客服总监'];
	

	//初始化
	function init(){
		var html = "";
		for(var i=0;i<p.length;i++){
			html += '<option value="'+p[i]+'" ww="'+i+'">'+p[i]+'</option>';
		}
		//设置省的innerHTML
		zhonglei.innerHTML = html;
	}
	init();

	//省份绑定onchange事件
	zhonglei.onchange = function(){
		var options = zhonglei.getElementsByTagName('option');
		for(var i=0;i<options.length;i++){
			if(options[i].selected==true){
				var v = options[i].getAttribute('ww');
			}
		}
		//获得当前省份所对象的城市的列表
		var fenlei = c[v];
		//动态循环创建元素
		var html = '';
		for(var i=0;i<fenlei.length;i++){
			html += '<option value="'+fenlei[i]+'">'+fenlei[i]+'</option>';
		}
		//获取元素
		var cs = document.getElementById('fenlei');
		//设置文本
		cs.innerHTML = html;
	}

	</script>

			</div>


		<div class="row cl">
		
			<label class="form-label col-2">工资：</label>
			<div class="formControls col-4">
				<input type="text" name="price" id="" placeholder="" value="" class="input-text" style="width:90%">
				元</div>
		</div>
		
		<!-- <div class="row cl">
			<label class="form-label col-2">产品关键字：</label>
			<div class="formControls col-10">
				<input type="text" name="" id="" placeholder="多个关键字用英文逗号隔开，限10个关键字" value="" class="input-text">
			</div>
		</div> -->
		<div class="row cl" id="city">
			<label class="form-label col-2">您的城市：</label>
			<select class="prov" name="prov"></select>  
			<select class="city" disabled="disabled" name="city"></select> 
			<select class="dist" disabled="disabled" name="dist"></select> 
		</div>
		<div class="row cl" id="picdiv">
			<label class="form-label col-2"><span class="c-red">*</span>上传图片：</label>
			<input type="file" name="pic[]">
			<input type="button" id="add" value="继续添加">
		</div>
		<literal>
		<script type="text/javascript">
		$('#add').click(function(){
			var input = $('input[type="file"][name="pic[]"]').eq(0).clone(true);
			input.insertBefore('#add');

		})
		</script>
		</liretal>
		<div class="row cl">
			<label class="form-label col-2">要求描述：</label>
			<div class="formControls col-10">
				<textarea name="miaoshu" cols="" rows="" class="textarea"  placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onKeyUp="textarealength(this,200)"></textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button onClick="article_save_submit();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存并提交审核</button>
			</div>
		</div>
	</form>
</div>
</div>
 

</body>
