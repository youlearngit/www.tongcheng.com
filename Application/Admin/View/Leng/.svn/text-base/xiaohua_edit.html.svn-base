<title>笑话添加</title>


<!-- 引入城市选择器的js样式 -->
<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.js"></script>
		<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.cityselect.js"></script>
		<script type="text/javascript">
			$(function(){
				$("#city").citySelect({
					nodata:"none",
					required:true
				}); 
			});
		</script>

</head>
<body>
<div class="pd-20">
	<form action="{:U('Admin/Leng/xiaohua_update')}" method="post" class="form form-horizontal" id="form-article-add" enctype="multipart/form-data">
		
		<div class="row cl" id="picdiv">
			<label class="form-label col-2"><span class="c-red">*</span>上传图片：</label>
			<input type="file" name="pic1[]">
			<input type="hidden" name="xid" value="{$info['xid']}">
			<input type="button" id="add" value="继续添加">
		</div>

		<div class="row cl" id="picdiv">
			<label class="form-label col-2">修改图片：</label>
			<div class="formControls col-4">
			<div style="height:200px;width:800px;border:1px solid red">
			<foreach name="info['pic1']" item="vo">

				<img src="__PUBLIC__{$vo}" alt="" width="100px">
			</foreach>
			</div>
			
			</div>
		</div>
		<literal>
		<script type="text/javascript">
		$('#add').click(function(){
			var input = $('input[type="file"][name="pic1[]"]').eq(0).clone(true);
			input.insertBefore('#add');

		})
		</script>
		</liretal>
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-10"> 
				<textarea name="content" cols="" rows="" class="textarea"  placeholder="说点什么...最少输入10个字符" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onKeyUp="textarealength(this,200)">{$info['content']}</textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div>
		</div>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<!-- <input type="hidden" name="id" value="{$info['id']}"> -->
				<button onClick="article_save_submit();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存并提交审核</button>
			</div>
		</div>
	</form>
</div>
</div>
<script type="text/javascript" src="__PUBLIC__/Admin/ueditor/1.4.3/ueditor.config.js"></script>
