<title>房子添加</title>


<!-- 引入城市选择器的js样式 -->
<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.js"></script>
		<script type="text/javascript" src="__PUBLIC__/Admin/city/js/jquery.cityselect.js"></script>
		<script type="text/javascript">
			$(function(){
				$("#city").citySelect({
					nodata:"none",
					required:true
				}); 
			});
		</script>




</head>
<body>
<div class="pd-20">
	<form action="{:U('Admin/Leng/user_update')}" method="post" class="form form-horizontal" id="form-article-add" enctype="multipart/form-data">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>邮箱地址：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="{$info['youxiang']}" placeholder="" id="" name="youxiang" style="width:180px">
			</div>
		</div>
		<!-- <div class="row cl">
			<label class="form-label col-2">简略标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="" id="" name="">
			</div>
		</div> -->
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>用户名：</label>
			<div class="formControls col-2">
				<!-- <select name="caoxiang" class="select"> -->
					<input type="text" class="input-text" value="{$info['username']}" placeholder="" id="" name="username">
				<!-- </select> -->
				
			</div>
		</div>

		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>性别：</label>
				<input type="radio"  value="男" name="sex" <if condition = "$info['sex'] eq '男'">checked</if>>男
				<input type="radio"  value="女" name="sex" <if condition = "$info['sex'] eq '女'">checked</if>>女
		</div>
		

		<div class="row cl">	
			<label class="form-label col-2"><span class="c-red">*</span>密码：</label>
			<div class="formControls col-2">
				<input type="password" class="input-text" value="{$info['pass']}" placeholder="" id="" name="pass">
				
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>重复密码：</label>
			<div class="formControls col-2">
				
				<input type="hidden" name='id' value="{$info['id']}">
				<input type="password" class="input-text" value="{$info['pass']}" placeholder="" id="" name="repass">
			
			</div>
		</div>
		<div class="row cl" id="picdiv">
			<label class="form-label col-2"><span class="c-red">*</span>上传头像：</label>
			<input type="file" name="pic[]">
			<!-- <input type="button" id="add" value="继续添加"> -->
		</div>

		<div class="row cl" id="picdiv">
			<label class="form-label col-2">修改图片：</label>
			<div class="formControls col-4">
			<div style="height:200px;width:800px;border:1px solid red">
			<foreach name="info['pic']" item="vo">
				<img src="__PUBLIC__{$vo}" alt="" width="100px">
			</foreach>
			</div>
			
			</div>
		</div>
		<literal>
		<script type="text/javascript">
		$('#add').click(function(){
			var input = $('input[type="file"][name="pic[]"]').eq(0).clone(true);
			input.insertBefore('#add');

		})
		</script>
		</liretal>
		
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button onClick="article_save_submit();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存并提交审核</button>
			</div>
		</div>
	</form>
</div>
</div>
