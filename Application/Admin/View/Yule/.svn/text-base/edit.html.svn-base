<body>
<div class="pd-20">
	<form action="{:U('Admin/Yule/update')}" method="post" class="form form-horizontal" id="form-article-add" enctype="multipart/form-data">
	<input type="hidden"  value="{$res['id']}" name="id">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>服务标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="{$res['title']}" placeholder="" id="" name="title">
			</div>
		</div>
		<!-- <div class="row cl">
			<label class="form-label col-2">简略标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="" id="" name="">
			</div>
		</div> -->
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>分类栏目：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="gclass" class="select" id="pro">
				<option vlaue="0">请选择</option>
				</select>
			</span>
			</div>
			<div class="formControls col-2"> <span class="select-box">
				<select name="sclass" class="select" id="citys">
				</select>
				</span> 
			
			</div>
			<br>
			<br>
		</div>
		<literal>
		<script type="text/javascript">
			//信息声明全部全部

		var p = ['运动健身','夜店酒吧','足疗/按摩','KTV','户外运动','洗浴/温泉'];
		var c = [];
		c[0] = ['游泳馆','健身中心','篮球场','篮球场','足球场','网球场','羽毛球馆','乒乓球馆','溜冰场','高尔夫球场','保龄球馆'];
		c[1] = ['酒吧','夜总会','迪厅'];
		c[2] = ['足浴保健','足部按摩','足底拔罐','修脚','按摩理疗'];
		c[3] = [];
		c[4] = ['攀岩','骑马',' 卡丁车','滑翔伞','蹦极','潜水','漂流','野外拓展','真人cs','滑雪'];
		c[5] = ['洗浴中心','度假村'];

		//初始化
		function init(){
			var html = "";
			for(var i=0;i<p.length;i++){
				html += '<option value="'+p[i]+'" ww="'+i+'">'+p[i]+'</option>';
			}
			//设置省的innerHTML
			pro.innerHTML = html;
		}
		init();

		//省份绑定onchange事件
		pro.onchange = function(){
			//获取选中一项的索引
			var options = pro.getElementsByTagName('option');
			for(var i=0;i<options.length;i++){
				if(options[i].selected == true){
					var v = options[i].getAttribute('ww');
				}
			}
			//获得当前省份所对象的城市的列表
			var citys = c[v];
			//动态循环创建元素
			var html = '';
			for(var i=0;i<citys.length;i++){
				html += '<option value="'+citys[i]+'">'+citys[i]+'</option>';
			}
			//获取元素
			var cs = document.getElementById('citys');
			//设置文本
			cs.innerHTML = html;
		}

		</script>
		</literal>
		<div class="row cl">
		
			<label class="form-label col-2">联系方式：</label>
			<div class="formControls col-4">
				<input type="text" name="tel" id="" placeholder="" value="{$res['tel']}" class="input-text" style="width:90%">
				元</div>
		</div>

		<div class="row cl">
		
			<label class="form-label col-2">销售价格：</label>
			<div class="formControls col-4">
				<input type="text" name="price" id="" placeholder="" value="{$res['price']}" class="input-text" style="width:90%">
				元</div>
		</div>
		
		<div class="row cl">
		<label class="form-label col-2">您的城市：</label>
			<div class="formControls col-2"><span class="select-box">
				<select class="prov select" name="prov" id="prov">
	                <foreach name="provs" item="ov">
	                <option value="{$ov['province']}" name="{$ov['provinceid']}">{$ov['province']}</option>
	                </foreach>
	            </select>
            </span>
           </div>

		<div class="formControls col-2"><span class="select-box">
            <select class="city select"  name="city" id="city"></select>
        </span></div>
        <div class="formControls col-2"><span class="select-box">
            <select class="dist select"  name="dist" id="dist"></select>
		</span>
		</div>
		</div>
			
			<script type="text/javascript">

        //城市选择器
        $('#city').hide();
        $('#dist').hide();
        $('#prov').change(function(){
            var cities = [];
            $('#city').html('');
            var pid = $(this).find('option:selected').attr('name');
            $.ajax({
                url:"{:U('Home/Send/province')}",
                type:'GET',
                data:{'provinceid':pid},
                dataType:'json',
                success:function(data){
                    cities = eval(data);
                    // alert(cities);
                },
                error:function(){
                    alert('错了');
                },
                timeout:30000,
                async:false

            });
            var html = '';
            for(var i in cities){
                html += '<option value="'+cities[i]+'" name="'+i+'">'+cities[i]+'</option>';
            }
            // alert(html);
            $('#city').show();
            $('#city').html(html);

        })
        $('#city').change(function(){
            var areas = [];
            var cid = $(this).find('option:selected').attr('name');
            $.ajax({
                url:"{:U('Home/Send/city')}",
                type:'GET',
                data:{'cityid':cid},
                dataType:'json',
                success:function(data){
                    areas = eval(data);
                    // alert(cities);
                },
                error:function(){
                    alert('错了');
                },
                timeout:30000,
                async:false

            });
            var html = '';
            for(var i in areas){
                html += '<option value="'+areas[i]+'" name="'+i+'">'+areas[i]+'</option>';
            }
            // alert(html);
            $('#dist').show();
            $('#dist').html(html);
            
        })
    </script>
		
		




		<div class="row cl" id="picdiv">
		<label class="form-label col-2">上传图片：</label>
			<input type="file" name="pic[]">
			<input type="button" id="add" value="继续添加">
		</div>
		<literal>
		<script type="text/javascript">
		$('#add').click(function(){
			var input = $('input[type="file"][name="pic[]"]').eq(0).clone(true);
			input.insertBefore('#add');
		})
		</script>
		</literal>
		<div class="row cl" id="picdiv">
			<label class="form-label col-2">修改图片：</label>
			<div class="formControls col-4">
			
			<div style="height:200px;width:700px;border:3px solid #ccc">
			<foreach name="res['pic']" item="vo">
				<img src="__PUBLIC__{$vo}" alt="" width="100px" style="margin:3px">
			</foreach>
			</div>
			
			</div>
		</div>

		<div class="row cl">
			<label class="form-label col-2">产品摘要：</label>
			<div class="formControls col-10">
				<textarea name="disc" cols="" rows="" class="textarea"  placeholder="产品的详细信息" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onKeyUp="textarealength(this,200)">{$res['ps']}</textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/200</p>
			</div>
		</div>

		<!-- 编辑器 -->
		<div class="row cl">
			<label class="form-label col-2">详细内容：</label>
			<div class="formControls col-10"> 
				<script id="editor" type="text/plain" style="width:100%;height:400px;" name="disc" value="{$res['disc']}"></script> 
			</div>
		</div>


		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button onClick="article_save_submit();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存并提交审核</button>
			</div>
		</div>


	</form>
</div>
</div>
<script type="text/javascript">
	$(function(){
	var ue = UE.getEditor('editor');
});
</script>
