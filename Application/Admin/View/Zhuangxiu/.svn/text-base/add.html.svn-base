<title>添加服务</title>
<script type="text/javascript" src="__PUBLIC__/Admin/city/CascadeJs.js"></script>
</head>
<body onLoad="Init('','','')">
<div class="pd-20">
	<form action="{:U('Admin/Zhuangxiu/insert')}" method="post" class="form form-horizontal" id="form-article-add" enctype="multipart/form-data">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>服务标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="" placeholder="" id="" name="title">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>服务类别：</label>
			<div class="formControls col-2">
				<span class="select-box" style="width:150px;">
					<select class="select" name="gtype" size="1" id="pro">
						<option value="0">请选择</option>
					</select>
				</span>
			</div>
			<div class="formControls col-2">
				<span class="select-box" style="width:150px;">
					<select class="select" name="stype" size="1" id="citys">
					</select>
				</span>
			</div>
			<!-- <select name="" id="pro">
				<option value="">请选择</option>
			</select>
			<select name="" id="citys"></select> -->

			<script type="text/javascript">
			//信息声明
			var p = ['家庭装修','工装服务','建材','家具','家纺家饰'];
			var c = [];
			c[0] = ['装修队/散工','装修公司','设计公司/设计师','施工监理'];

			c[1] = ['办公室装修','写字楼装修','餐饮娱乐装修','店铺装修','商场/超市装修','学校装修','幼儿园装修','医院装修','售楼中心装修','厂房装修','展厅装修','酒店装修'];

			c[2] = ['橱柜','瓷砖','地板','房门','卫浴洁具','移门壁柜','涂料壁纸','厨卫电器','公共环卫设施','灯具照明','门窗','龙头水槽','吊顶浴霸','暖气地暖','晾衣架/杆','楼梯','智能家居系统','基础建筑材料','水泥砂石','五金工具','电子电工','环保/除味/保养'];

			c[3] = ['床','床垫','榻榻米','空间家具','沙发','桌类','椅凳','柜类','架类','几类','案/台类','根雕类','镜子类','屏风/花窗','箱类','户外庭院','辅料配件','商业/办公家具'];

			c[4] = ['床上用品','布艺软饰','帘类','毯类','垫类','家居摆挂饰','相框/画片','贴饰壁饰','工艺饰品'];

			//初始化
			function init(){
				var html = "";
				for(var i=0;i<p.length;i++){
					html += '<option value="'+p[i]+'" ww="'+i+'">'+p[i]+'</option>';
				}
				//设置省的innerHTML
				pro.innerHTML = html;
			}
			init();

			//省份绑定onchange事件
			pro.onchange = function(){
				var options = pro.getElementsByTagName('option');
				for(var i=0;i<options.length;i++){
					if(options[i].selected == true){
						var v = options[i].getAttribute('ww');
					}
				}
				//获得当前省份所对象的城市的列表
				var citys = c[v];
				//动态循环创建元素
				var html = '';
				for(var i=0;i<citys.length;i++){
					html += '<option value="'+citys[i]+'">'+citys[i]+'</option>';
				}
				//获取元素
				var cs = document.getElementById('citys');
				//设置文本
				cs.innerHTML = html;
			}

			</script>



		</div>

		<div class="row cl">
		
			<label class="form-label col-2"><span class="c-red">*</span>服务价格：</label>
			<div class="formControls col-4">
				<input type="text" name="price" id="" placeholder="" value="" class="input-text" style="width:90%">
				元</div>
		</div>

		<div class="row cl">
		
			<label class="form-label col-2"><span class="c-red">*</span>联系方式：</label>
			<div class="formControls col-4">
				<input type="text" name="tel" id="" placeholder="" value="" class="input-text" style="width:90%">
				年</div>
		</div>
	
		<div class="row cl">
				<label class="form-label col-2">您的城市：</label>
	            <select id="Select1" name="addr" runat="server" onChange="selectCity();"><option value="" selected>请选择城市</option>
		          <option value="1">北京</option>
		          <option value="2">上海</option>
		          <option value="3">广州</option>
	            </select>
	           
	    </div>
		
		<div class="row cl" id="picdiv">

			<label class="form-label col-2">上传图片：</label>
					  <input type="file" name="pic1"> 
					  <input type="file" name="pic2">
					  <input type="file" name="pic3">
			
		</div>
		<div class="row cl">
			<label class="form-label col-2">产品摘要：</label>
			
			<div class="formControls col-10">
				<script id="editor" type="text/plain" name="intro" style="width:600px;height:300px;"></script>
			</div>
		</div>
		<script type="text/javascript">
                                //实例化编辑器
                                //建议使用工厂方法getEditor创建和引用编辑器实例，如果在某个闭包下引用该编辑器，直接调用UE.getEditor('editor')就能拿到相关的实例
                                var ue = UE.getEditor('editor');
        </script>
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<button onClick="article_save_submit();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存并提交审核</button>
			</div>
		</div>
	</form>
</div>
</div>


</body>
</html>