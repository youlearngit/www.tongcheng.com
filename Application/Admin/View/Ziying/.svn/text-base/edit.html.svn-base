<title>新增图片</title>
<script type="text/javascript" src="__PUBLIC__/Admin/city/CascadeJs.js"></script>
</head>
<body onLoad="Init('','','')">
<div class="pd-20">
	<form action="{:U('Admin/Ziying/update')}" method="post" class="form form-horizontal" id="form-article-add" enctype="multipart/form-data">
			<div class="row cl">
				<label class="form-label col-2"><span class="c-red">*</span>服务名称：</label>
				<div class="formControls col-10">
					<input type="text" class="input-text" value="{$info['name']}" placeholder="" id="" name="name" style="width:35%">
				</div>
			</div>

			<div class="row cl">
				<label class="form-label col-2"><span class="c-red">*</span>服务类别：</label>
				<div class="formControls col-2"> <span class="select-box">
					<select name="pid" class="select">
						<option value="0">顶级分类</option>
                        <foreach name="cate" item="vo" >
                        <option value="{$vo['id']}" <if condition="$info['pid'] eq $vo['id']">selected</if>>{$vo['name']}</option>
                        </foreach>
					</select>
					</span> 
				</div>
			</div>

			<div class="row cl">
				<label class="form-label col-2">详情介绍：</label>
				<div class="formControls col-10">
					<script id="editor" type="text/plain" name="intro" style="width:600px;height:300px;"></script>
				</div>
			</div>

			<script type="text/javascript">
                var ue = UE.getEditor('editor');
        	</script>

			<div class="row cl">
				<div class="col-10 col-offset-2">
                    <input type="hidden" name="id" value="{$info['id']}">
					<button onClick="article_save_submit();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 保存并提交审核</button>
				</div>
			</div>
	</form>
</div>


</body>
</html>